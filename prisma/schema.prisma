generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum DistanceUnits {
  MILES
  KILOMETERS
  BANANAS
}

enum DateFormat {
  DAY
  MONTH
}

enum TimeFormat {
  TWELVE
  TWENTYFOUR
}

model Profile {
  id                             Int         @id @default(autoincrement())
  clerkId                        String?     @unique
  bio                            String
  distanceUnits                  DistanceUnits
  dateFormat                     DateFormat
  timeFormat                     TimeFormat
  commentsNotification           Boolean
  remindersNotification          Boolean
  collaboratorJoinedNotification Boolean
  itineraries                    Itinerary[]
  comments                       Comment[]
}

model Itinerary {
  id           Int       @id @default(autoincrement())
  name         String
  startDate    DateTime
  endDate      DateTime
  profileId    Int?
  likes        Int
  public       Boolean
  destinations String
  coverPhoto   String?
  ipAddress    String?
  comments     Comment[]
  profile      Profile?  @relation(fields: [profileId], references: [id], onDelete: Cascade)
  tripDays     TripDay[]
}

model TripDay {
  id          Int        @id @default(autoincrement())
  date        DateTime
  itineraryId Int?
  activities  Activity[]
  itinerary   Itinerary? @relation(fields: [itineraryId], references: [id], onDelete: Cascade)
}

model Comment {
  id          Int        @id @default(autoincrement())
  text        String
  itineraryId Int?
  profileId   Int
  itinerary   Itinerary? @relation(fields: [itineraryId], references: [id], onDelete: Cascade)
  profile     Profile    @relation(fields: [profileId], references: [id])
}

model Activity {
  id          Int       @id @default(autoincrement())
  name        String
  startTime   DateTime?
  endTime     DateTime?
  contactInfo String?
  note        String?
  street      String?
  postalCode  String?
  city        String?
  country     String?
  tripDayId   Int?
  photo       String?
  tripDay     TripDay?  @relation(fields: [tripDayId], references: [id], onDelete: Cascade)
}
